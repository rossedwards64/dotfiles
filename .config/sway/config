set $mod Mod4
set $left h
set $down j
set $up k
set $right l
set $term alacritty
set $menu $HOME/.config/rofi/scripts/launcher.sh
set $powermenu $HOME/.config/waybar/modules/poweroff.sh
set $lock $HOME/.local/bin/lock.sh
set $check-mute $HOME/.local/bin/check_mute.sh
set $opacity 0.9
set $gnome-schema org.gnome.desktop.interface

font pango:Iosevka 10
client.focused c4c7c5 212b30 ffffff
client.focused_inactive c4c7c5 64727d ffffff 2e9ef4 555a5c
client.focused_tab_title c4c7c5 212b30 ffffff
client.urgent c4c7c5 eb4d4b ffffff

output * scale 1
output * res 1366x768
output * bg /home/ross/Pictures/wallpapers/lordgenome.png fill

exec alacritty
exec emacsclient -c -a=""
#exec intellij-idea-ultimate-edition
exec flatpak run com.discordapp.Discord
exec firefox
exec ncspot
exec autotiling -w 1 2 4 5 7 8 9 10

xwayland enable

### Idle configuration
exec swayidle -w \
         timeout 300 $lock \
         timeout 600 'swaymsg "output * dpms off"' resume 'swaymsg "output * dpms on"' \
         before-sleep $lock

exec swayosd

exec_always {
    gsettings set $gnome-schema gtk-theme 'rose-pine-moon-gtk'
    gsettings set $gnome-schema icon-theme 'rose-pine-moon-icons'
}

### Input configuration
input "type:keyboard" {
      xkb_layout gb
      xkb_options ctrl:nocaps
}

input "2:7:SynPS/2_Synaptics_TouchPad" {
    dwt enabled
    tap enabled
    natural_scroll enabled
    middle_emulation enabled
}

# You can get the names of your inputs by running: swaymsg -t get_inputs
# Read `man 5 sway-input` for more information about this section.

### Key bindings
bindsym $mod+Return exec $term
bindsym $mod+Shift+g exec emacsclient -c -a=""
bindsym $mod+Shift+q kill
bindsym $mod+d exec "pkill rofi || $menu"
bindsym $mod+Escape exec "pkill rofi || $powermenu"
bindsym $mod+Shift+c reload
bindsym $mod+Shift+e exec swaynag -t warning -m 'You pressed the exit shortcut. Do you really want to exit sway? This will end your Wayland session.' -B 'Yes, exit sway' 'swaymsg exit'
bindsym $mod+Shift+s exec $lock
floating_modifier $mod normal

bindsym --locked XF86AudioRaiseVolume exec wpctl set-volume -l 1.5 @DEFAULT_AUDIO_SINK@ 5%+
bindsym --locked XF86AudioLowerVolume exec wpctl set-volume @DEFAULT_AUDIO_SINK@ 5%-
bindsym --locked XF86AudioMute exec wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle && $check-mute "getspeaker"
bindsym --locked XF86AudioMicMute exec wpctl set-mute @DEFAULT_AUDIO_SOURCE@ toggle && $check-mute "getmic"
bindsym --locked XF86AudioPlay exec playerctl play-pause
bindsym --locked XF86AudioNext exec playerctl next
bindsym --locked XF86AudioPrev exec playerctl previous
bindsym --locked XF86MonBrightnessUp exec xbacklight -inc 10
bindsym --locked XF86MonBrightnessDown exec xbacklight -dec 10

# Moving around:
bindsym $mod+$left focus left
bindsym $mod+$down focus down
bindsym $mod+$up focus up
bindsym $mod+$right focus right
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

bindsym $mod+Shift+$left move left
bindsym $mod+Shift+$down move down
bindsym $mod+Shift+$up move up
bindsym $mod+Shift+$right move right
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

bindgesture pinch:inward+up move up
bindgesture pinch:inward+down move down
bindgesture pinch:inward+left move left
bindgesture pinch:inward+right move right

# Workspaces:
set $ide "IDE"
set $term "Terminal"
set $web "Web"
set $discord "Discord"
set $music "Spotify"
set $steam "Steam"
set $game "Game"
set $fm "Explorer"
set $intellij "IntelliJ"
set $ws10 "10"

# switch to workspace
bindsym $mod+1 workspace $ide
bindsym $mod+2 workspace $term
bindsym $mod+3 workspace $web
bindsym $mod+4 workspace $discord
bindsym $mod+5 workspace $music
bindsym $mod+6 workspace $steam
bindsym $mod+7 workspace $game
bindsym $mod+8 workspace $fm
bindsym $mod+9 workspace $intellij
bindsym $mod+0 workspace number $ws10

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace $ide, workspace $ide
bindsym $mod+Shift+2 move container to workspace $term, workspace $term
bindsym $mod+Shift+3 move container to workspace $web, workspace $web
bindsym $mod+Shift+4 move container to workspace $discord, workspace $discord
bindsym $mod+Shift+5 move container to workspace $music, workspace $music
bindsym $mod+Shift+6 move container to workspace $steam, workspace $steam
bindsym $mod+Shift+7 move container to workspace $game, workspace $game
bindsym $mod+Shift+8 move container to workspace $fm, workspace $fm
bindsym $mod+Shift+9 move container to workspace $intellij, workspace $intellij
bindsym $mod+Shift+0 move container to workspace number $ws10, workspace number $10

workspace_auto_back_and_forth yes

bindgesture swipe:right workspace prev
bindgesture swipe:left workspace next

assign [app_id="emacs"] $ide
assign [app_id="Alacritty"] $term
assign [class="firefox" instance="Navigator"] $web
assign [class="discord" instance="discord"] $discord
assign [class="spotify" instance="Spotify"] $music
assign [class="Steam" instance="Steam"] $steam
assign [app_id="Lutris"] $steam
assign [app_id="org.libretro.Retroarch"] $steam
assign [class="steam_app_*" instance="steam_app_*"] $game
assign [class="Pcmanfm"] $fm
assign [class="jetbrains-idea" instance="jetbrains-idea"] $intellij

# Layout stuff:
bindsym $mod+b splith
bindsym $mod+v splitv
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split
bindsym $mod+f fullscreen
bindsym $mod+Shift+space floating toggle
bindsym $mod+space focus mode_toggle
bindsym $mod+a focus parent

# Scratchpad:
bindsym $mod+Shift+minus move scratchpad
bindsym $mod+minus scratchpad show

# Resizing containers:
mode "resize" {
    bindsym $left resize shrink width 10px
    bindsym $down resize grow height 10px
    bindsym $up resize shrink height 10px
    bindsym $right resize grow width 10px

    bindsym Left resize shrink width 10px
    bindsym Down resize grow height 10px
    bindsym Up resize shrink height 10px
    bindsym Right resize grow width 10px

    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

bar {
    swaybar_command waybar
}

bindsym Print exec "/home/ross/.local/bin/screenshot.sh"
bindsym Print+Shift exec "/home/ross/.local/bin/screenshot.sh" "/home/ross/Pictures/screenshots"

title_align center

for_window [app_id=".*"] border pixel 1
for_window [app_id=".*"] inhibit_idle fullscreen
for_window [window_role="pop-up"] floating enable
for_window [window_role="task_dialog"] floating enable

gaps inner 2
gaps outer 2

smart_gaps inverse_outer
smart_borders on

include /etc/sway/config.d/*
