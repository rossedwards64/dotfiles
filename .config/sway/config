set $mod Mod4
set $left h
set $down j
set $up k
set $right l
set $menu $HOME/.config/rofi/scripts/launcher.sh
set $term LIBGL_ALWAYS_SOFTWARE=1 alacritty
set $opacity 0.9

font pango:Iosevka 10
client.focused c4c7c5 212b30 ffffff
client.focused_inactive c4c7c5 64727d ffffff 2e9ef4 555a5c
client.focused_tab_title c4c7c5 212b30 ffffff
client.urgent c4c7c5 eb4d4b ffffff

output * scale 1
output * res 1280x800
output * bg /home/ross/Pictures/wallpapers/wallpaper.jpg fill

exec alacritty
exec emacsclient -c -a=""
exec discord
exec steam
exec firefox
exec autotiling -w 1 2 4 5 7 8 9 10

### Idle configuration
exec swayidle -w \
         timeout 300 '/home/ross/.local/bin/lock.sh' \
         timeout 600 'swaymsg "output * dpms off"' resume 'swaymsg "output * dpms on"' \
         before-sleep '/home/ross/.local/bin/lock.sh'

set $gnome-schema org.gnome.desktop.interface
exec_always {
    gsettings set $gnome-schema gtk-theme 'rose-pine-moon-gtk'
    gsettings set $gnome-schema icon-theme 'rose-pine-moon-icons'
}

### Input configuration
input "1:1:AT_Translated_Set_2_keyboard" {
      xkb_layout gb
      xkb_options ctrl:nocaps
}

input "2:7:SynPS/2_Synaptics_TouchPad" {
    dwt enabled
    tap enabled
    natural_scroll enabled
    middle_emulation enabled
}

# You can get the names of your inputs by running: swaymsg -t get_inputs
# Read `man 5 sway-input` for more information about this section.

### Key bindings
bindsym $mod+Return exec $term
bindsym $mod+Shift+g exec emacsclient -c -a=""
bindsym $mod+Shift+q kill
bindsym $mod+d exec $menu
bindsym $mod+Shift+c reload
bindsym $mod+Shift+e exec swaynag -t warning -m 'You pressed the exit shortcut. Do you really want to exit sway? This will end your Wayland session.' -B 'Yes, exit sway' 'swaymsg exit'
floating_modifier $mod normal

bindsym XF86AudioRaiseVolume exec pactl set-sink-volume @DEFAULT_SINK@ +5%
bindsym XF86AudioLowerVolume exec pactl set-sink-volume @DEFAULT_SINK@ -5%
bindsym XF86AudioMute exec pactl set-sink-mute @DEFAULT_SINK@ toggle && "/home/ross/.local/bin/check_mute.sh" "getspeaker"
bindsym XF86AudioMicMute exec pactl set-source-mute @DEFAULT_SOURCE@ toggle && "/home/ross/.local/bin/check_mute.sh" "getmic"
bindsym XF86AudioPlay exec playerctl play-pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous
bindsym XF86MonBrightnessUp exec xbacklight -inc 10
bindsym XF86MonBrightnessDown exec xbacklight -dec 10

# Moving around:
bindsym $mod+$left focus left
bindsym $mod+$down focus down
bindsym $mod+$up focus up
bindsym $mod+$right focus right
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

bindsym $mod+Shift+$left move left
bindsym $mod+Shift+$down move down
bindsym $mod+Shift+$up move up
bindsym $mod+Shift+$right move right
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# Workspaces:
set $ide "IDE"
set $term "Terminal"
set $web "Web"
set $discord "Discord"
set $music "Spotify"
set $steam "Steam"
set $game "Game"
set $fm "File Manager"
set $ws9 "9"
set $ws10 "10"

# switch to workspace
bindsym $mod+1 workspace $ide
bindsym $mod+2 workspace $term
bindsym $mod+3 workspace $web
bindsym $mod+4 workspace $discord
bindsym $mod+5 workspace $music
bindsym $mod+6 workspace $steam
bindsym $mod+7 workspace $game
bindsym $mod+8 workspace $fm
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws10

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace $ide, workspace $ide
bindsym $mod+Shift+2 move container to workspace $term, workspace $term
bindsym $mod+Shift+3 move container to workspace $web, workspace $web
bindsym $mod+Shift+4 move container to workspace $discord, workspace $discord
bindsym $mod+Shift+5 move container to workspace $music, workspace $music
bindsym $mod+Shift+6 move container to workspace $steam, workspace $steam
bindsym $mod+Shift+7 move container to workspace $game, workspace $game
bindsym $mod+Shift+8 move container to workspace $fm, workspace $fm
bindsym $mod+Shift+9 move container to workspace number $ws9, workspace number $ws9
bindsym $mod+Shift+0 move container to workspace number $ws10, workspace number $10

workspace_auto_back_and_forth yes

assign [app_id="emacs"] $ide
assign [app_id="Alacritty"] $term
assign [class="firefox" instance="Navigator"] $web
assign [class="discord" instance="discord"] $discord
assign [class="spotify" instance="Spotify"] $music
assign [class="Steam" instance="Steam"] $steam
assign [app_id="Lutris"] $steam
assign [app_id="org.libretro.Retroarch"] $steam
assign [class="steam_app_*" instance="steam_app_*"] $game
assign [class="Pcmanfm"] $fm

# Layout stuff:
bindsym $mod+b splith
bindsym $mod+v splitv
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split
bindsym $mod+f fullscreen
bindsym $mod+Shift+space floating toggle
bindsym $mod+space focus mode_toggle
bindsym $mod+a focus parent

# Scratchpad:
bindsym $mod+Shift+minus move scratchpad
bindsym $mod+minus scratchpad show

# Resizing containers:
mode "resize" {
    bindsym $left resize shrink width 10px
    bindsym $down resize grow height 10px
    bindsym $up resize shrink height 10px
    bindsym $right resize grow width 10px

    bindsym Left resize shrink width 10px
    bindsym Down resize grow height 10px
    bindsym Up resize shrink height 10px
    bindsym Right resize grow width 10px

    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+r mode "resize"

bar {
    swaybar_command waybar
}

bindsym Print exec "/home/ross/.local/bin/screenshot.sh"
bindsym Print+Shift exec "/home/ross/.local/bin/screenshot.sh" "/home/ross/Pictures/screenshots"

title_align center

for_window [app_id=".*"] border pixel 1
for_window [app_id=".*"] inhibit_idle fullscreen
for_window [class="chip8"] floating enable
for_window [window_role="pop-up"] floating enable
for_window [window_role="task_dialog"] floating enable

gaps inner 2
gaps outer 2

smart_gaps inverse_outer
smart_borders on

include /etc/sway/config.d/*
